extends ../template

block content
    #content
        if data 
            .alert.alert-danger.alert-dismissable(role="alert")
                button(type="button", data-dismiss="alert").close
                    span(aria-hidden="true") &times;
                    span.sr-only Close
                strong Lỗi!    
                i= data
                
        form#signup(action="/signup", method="POST", enctype="multipart/form-data")
            label Tài khoản đăng ký 
                span.notnull (*)
            input(type="text", name="username", placeholder="Nhập ở đây ...")#username.form-control
            label Mật khẩu 
                span.notnull (*)
            input(type="password", name="password", placeholder="Nhập ở đây ...")#password.form-control
            label Xác nhận mật khẩu 
            input(type="password", name="review", placeholder="Nhập ở đây ...").form-control
            label Họ và tên
            input(type="text", name="fullname", placeholder="Nhập ở đây ...").form-control
            label Hình đại diện
            input(type="file", name="icon").form-control
            label Ngày sinh
            input(type="date", name="birthday", placeholder="Nhập ở đây ...").form-control
            label Email
            input(type="email", name="email", placeholder="Nhập ở đây ...").form-control
            label Điện thoại
            input(type="text", name="phone", placeholder="Nhập ở đây ...").form-control
            label Nghề nghiệp hiện tại
            input(type="text", name="job", placeholder="Nhập ở đây ...").form-control
            label Đôi nét bản thân
            textarea(name="info", placeholder="Nhập ở đây ...").form-control
            label CV đính kèm
            input(type="file", name="cv").form-control
            button(type="submit").btn.btn-primary.btn-block Đăng ký

block footer
    script.
        CKEDITOR.replace('info', {
            customConfig: 'config-min.js'
        });