doctype html
html(lang="#{ clanguage }")
    head
        title #{ __("title-web") }
        meta(charset="utf8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        base(href="http://localhost:3000")
        link(rel="icon", href="images/icons/favicon.ico", type="image/x-icon")
        link(href="css/bootstrap.min.css", rel="stylesheet")
        link(href="css/bootstrap.min.css", rel="stylesheet")
        link(href="css/clientstyle.css", rel="stylesheet")
        link(href="font-awesome/css/font-awesome.min.css", rel="stylesheet")
        script(src="js/jquery-3.1.1.min.js")
        script(src="js/jquery.validate.min.js")
        script(src="js/bootstrap.min.js")
        script(src="js/eModal.min.js")
        script(src="js/client.js")
        script(src="ckeditor/ckeditor.js")
        block head
    body
        #header
            #div-logo: img(src="images/logo.png")
            #div-solo
                h1 #{ __("title-page") }
                p #{ __("decscription-page") }
            #div-language.btn-group
                img(src="images/icons/#{ clanguage }.png", data-toggle="dropdown")
                ul(class="dropdown-menu dropdown-menu-right", role="menu")
                    for lg in languages
                        li
                            a(href="?lang=#{ lg }") #{ __(lg) }
                                img(src="images/icons/#{ lg }.png")
            .clear
        .container
            nav#menubar.navbar: include files/_menu
            block content
        #footer: include files/_footer
        block footer
        #waiting
            i(aria-hidden="true").fa.fa-cog.fa-spin.fa-3x.fa-fw
        #backtop
            span.fa-stack.fa-lg
                i.fa.fa-square-o.fa-stack-2x
                i.fa.fa-hand-o-up.fa-stack-1x
        #alert-autohide(style="display:none;")
            #title-alert
                i#title Tiêu đề
                span(aria-hidden="true", onclick="hidealert();") &times;
            #content-alert Nội dung